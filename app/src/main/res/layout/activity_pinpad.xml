<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nexgo.apiv3demoSDK206.PinpadActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_key_inject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:onClick="onClick"
            android:text="@string/update_tmk"
            android:textSize="@dimen/normal_text_size" />

        <Button
            android:id="@+id/work_key_inject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:onClick="onClick"
            android:text="@string/update_workkey"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/work_key_enc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:onClick="onClick"
            android:text="@string/encrypt_workkey"
            android:textSize="@dimen/normal_text_size" />

        <Button
            android:id="@+id/input_pin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:onClick="onClick"
            android:text="@string/input_online_pin"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pinpad_calMac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:onClick="onClick"
            android:text="calculate MAC"
            android:textSize="@dimen/normal_text_size" />

        <Button
            android:id="@+id/pinpad_tken"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:onClick="onClick"
            android:text="加密磁道数据"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pinpad_custom_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:onClick="onClick"
            android:text="自定义密码键盘界面"
            android:textSize="@dimen/normal_text_size" />

        <Button
            android:id="@+id/pinpad_load_by_com"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:onClick="onClick"
            android:text="母pos灌密钥"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>
</LinearLayout>
